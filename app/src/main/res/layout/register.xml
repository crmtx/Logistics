<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:text="账         号"
            android:textSize="20dp"
            android:padding="5dp"/>
        <EditText
            android:id="@+id/register_id"
            android:layout_height="40dp"
            android:layout_width="260dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:background="@drawable/white"
            android:gravity="center"
            android:hint="请填写登录账号（必填）"
            android:inputType="text"
            android:lines="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:text="密         码"
            android:textSize="20dp"
            android:padding="5dp"/>
        <EditText
            android:id="@+id/register_password"
            android:layout_height="40dp"
            android:layout_width="260dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:background="@drawable/white"
            android:gravity="center"
            android:hint="请填写登录密码（必填）"
            android:inputType="textPassword"
            android:lines="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:text="确认密码"
            android:textSize="20dp"
            android:padding="5dp"/>
        <EditText
            android:id="@+id/register_password2"
            android:layout_height="40dp"
            android:layout_width="260dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:background="@drawable/white"
            android:gravity="center"
            android:hint="请填写确认密码（必填）"
            android:inputType="textPassword"
            android:lines="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:text="用户姓名"
            android:textSize="20dp"
            android:padding="5dp"/>
        <EditText
            android:id="@+id/register_username"
            android:layout_height="40dp"
            android:layout_width="260dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:background="@drawable/white"
            android:gravity="center"
            android:hint="请填写用户姓名"
            android:inputType="text"
            android:lines="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:text="联系电话"
            android:textSize="20dp"
            android:padding="5dp"/>
        <EditText
            android:id="@+id/register_phone"
            android:layout_height="40dp"
            android:layout_width="260dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:background="@drawable/white"
            android:gravity="center"
            android:hint="请填写手机号码"
            android:inputType="phone"
            android:lines="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:text="公司名称"
            android:textSize="20dp"
            android:padding="5dp"/>
        <EditText
            android:id="@+id/register_companyname"
            android:layout_height="40dp"
            android:layout_width="260dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:background="@drawable/white"
            android:gravity="center"
            android:hint="请填写公司名称"
            android:inputType="text"
            android:lines="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:text="公司地址"
            android:textSize="20dp"
            android:padding="5dp"/>
        <EditText
            android:id="@+id/register_companyaddress"
            android:layout_height="40dp"
            android:layout_width="260dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:background="@drawable/white"
            android:gravity="center"
            android:hint="请填写公司地址"
            android:inputType="text"
            android:lines="1"/>
    </LinearLayout>

    <Button
        android:id="@+id/ok_button"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/blue"
        android:text="确认"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:onClick="click"/>

</LinearLayout>